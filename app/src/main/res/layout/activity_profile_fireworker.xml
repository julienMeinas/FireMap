<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_item">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginTop="-8dp"
        android:layout_marginLeft="-8dp"
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawable_back">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="25dp"
            android:text="Name"/>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imageName"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/drawable_profile_fireworker">
            </ImageView>

            <TextView
                android:id="@+id/littleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:text="Name"
                android:layout_toRightOf="@id/imageName"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <ImageView
                android:id="@+id/imageAddress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/drawable_address"
                android:layout_below="@id/littleName">
            </ImageView>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:text="Address"
                android:layout_toRightOf="@id/imageName"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/littleName"
                android:autoLink="web">
            </TextView>


            <ImageView
                android:id="@+id/imageMail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/drawable_email"
                android:layout_below="@id/address">
            </ImageView>

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:text="Mail"
                android:layout_toRightOf="@id/imageName"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/address"
                android:autoLink="email">
            </TextView>


            <ImageView
                android:id="@+id/imagePhone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/drawable_phone"
                android:layout_below="@id/mail">
            </ImageView>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:text="phone"
                android:layout_toRightOf="@id/imageName"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/mail"
                android:autoLink="phone">
            </TextView>

            <ImageView
                android:id="@+id/imageLink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/drawable_computer"
                android:layout_below="@id/phone">
            </ImageView>

            <TextView
                android:id="@+id/link"
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:text="link"
                android:layout_toRightOf="@id/imageName"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/phone">
            </TextView>


        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layoutAvis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/rate_star_one"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_star_big_on_holo_dark"/>
                    <ImageView
                        android:id="@+id/rate_star_two"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_star_big_on_holo_dark"/>
                    <ImageView
                        android:id="@+id/rate_star_three"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_star_big_half_holo_dark"/>
                    <ImageView
                        android:id="@+id/rate_star_four"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_star_big_off_holo_dark"/>
                    <ImageView
                        android:id="@+id/rate_star_five"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_star_big_off_holo_dark"/>
                </LinearLayout>

                <Button
                    android:id="@+id/addAvis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Ajouter un avis"
                    android:layout_margin="5dp"
                    android:layout_gravity="right">
                </Button>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:id="@+id/recycler_view"/>

            </LinearLayout>

            <TextView
                android:id="@+id/avisEmpty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/colorText"
                android:text="Aucun avis pour l'instant \n Vous pouvez ajouter le votre"
                android:layout_centerInParent="true">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_profile_fireworker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_profile"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:layout_marginTop="20dp">
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>