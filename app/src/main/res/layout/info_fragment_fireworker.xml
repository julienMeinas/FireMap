<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerFireworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:text="Organisateur"
        android:layout_marginLeft="30dp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/headerFireworker"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/rate_star_one"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rate_star_big_on_holo_dark"/>
        <ImageView
            android:id="@+id/rate_star_two"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rate_star_big_on_holo_dark"/>
        <ImageView
            android:id="@+id/rate_star_three"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rate_star_big_half_holo_dark"/>
        <ImageView
            android:id="@+id/rate_star_four"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rate_star_big_off_holo_dark"/>
        <ImageView
            android:id="@+id/rate_star_five"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rate_star_big_off_holo_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fireworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:layout_below="@id/headerFireworker"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Feu d'artifice Hubert ThÃ©zÃ© Pyrotechnie : spectacle pyrotechnique et illuminations de rue">
    </TextView>

    <Button
        android:id="@+id/button_fireworker"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:layout_below="@id/fireworker"
        android:layout_alignParentRight="true"
        android:textSize="7sp"
        android:textColor="@color/white"
        android:text="Voir profil">
    </Button>

</RelativeLayout>