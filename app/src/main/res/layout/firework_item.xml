<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/colorItem"
    android:id="@+id/parent_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Address"
            android:layout_marginTop="20dp"
            android:id="@+id/address"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Date"
            android:layout_marginTop="20dp"
            android:id="@+id/date"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/price"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/drawable_price_free"
                    android:layout_margin="2dp">
                </ImageView>

                <ImageView
                    android:id="@+id/parking"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/drawable_parking_free"
                    android:layout_margin="2dp">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/people"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/drawable_people_high"
                    android:layout_margin="2dp">
                </ImageView>

                <ImageView
                    android:id="@+id/accessHandicap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/drawable_no_handicap_access"
                    android:layout_margin="2dp">
                </ImageView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>