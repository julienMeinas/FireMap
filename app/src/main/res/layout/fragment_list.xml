<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_list"
    android:background="@color/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nextFireworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prochains Feux d'artifice"
            android:textColor="@color/white">
        </Button>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_marginTop="50dp"
            android:id="@+id/recycler_view">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_add"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="Ajouter"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/drawable_add"
                android:background="@drawable/custom_button_add">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewErrorConnexion"
            android:layout_centerInParent="true"
            android:text="Une erreur s'est produite lors \ndu chargement des feux d'artifice.\nVérifiez votre connexion \ninternet ou réessayez plus tard"
            android:textSize="20sp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>